<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tracer_study">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:text="@string/tracer_study"
        android:textColor="#469073"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="57dp">

    </TextView>

    <TextView
        android:id="@+id/soal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="55dp"
        android:text="@string/soal1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle=""
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="57dp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/jawabanSoal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soal1"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/jawaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="A. KASNDLANSDAL"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/jawaban2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="B. AJSDANDSADASD"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/jawaban3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C.DASDASDAS"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/jawaban4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D. DASDASD"
            android:textSize="18sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/soal2"
        android:layout_below="@+id/jawabanSoal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="@string/soal2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle=""
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="57dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/jawabanSoal2"
        android:layout_below="@+id/soal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/jawaban5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. KASNDLANSDAL"
            android:textSize="18sp"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/jawaban6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="B. AJSDANDSADASD"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/jawaban7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="C.DASDASDAS"/>
        <RadioButton
            android:id="@+id/jawaban8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="D. DASDASD"/>
    </RadioGroup>

