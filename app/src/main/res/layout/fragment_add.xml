<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:text="Tambah Unggahan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="bold"/>

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:layout_below="@+id/add"
        android:stretchColumns="2"
        android:backgroundTintMode="@color/black">

        <TableRow>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/foto_putri_silitonga"
                android:contentDescription="@string/ava" />

            <TextView
                android:layout_width="354dp"
                android:layout_height="match_parent"
                android:text="@string/alumni1"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:padding="15dp"
                android:layout_span="2"
                android:text="loreasdafasdfsadfsadfm ipsumfakfbdfdsgdfgsdfgdgd"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_image_24"
                android:layout_gravity="center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/teal_700"
                android:text="Unggah"
                android:textColor="@color/white"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
